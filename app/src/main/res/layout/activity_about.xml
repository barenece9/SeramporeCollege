<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<!--android:background="@color/colorAccentTransparent"-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/copyright_tv"
        android:text="Serampore College"
        android:textColor="@color/colorAccentTransparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/copyright_tv_version_number"/>

    <ImageView
        android:id="@+id/logo_center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_test"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/copyright_tv_version_number"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/logo_center"
        android:layout_alignEnd="@+id/logo_center"
        android:textColor="@color/accent"
        android:layout_below="@+id/logo_center"
        android:text="v 1.0.0"/>




</RelativeLayout>

