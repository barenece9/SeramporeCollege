<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:background="@color/primary">

        <com.lnsel.seramporecollege.circularimage.CircularImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:id="@+id/pf_pic"
            android:background="#987654"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            app:border="true"
            app:border_color="#ffffff"
            app:border_width="2dp"
            app:shadow="true"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pf_name"
            android:text="Teacher User"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pf_pic"
            android:visibility="gone"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:id="@+id/log_out_btn"
            android:layout_centerHorizontal="true"
            android:text="Log Out"
            android:layout_below="@+id/pf_name"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_header_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/primary" />

        <!--android:background="#F44336" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@drawable/icons8_director_48" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Employee One"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:layout_marginLeft="0dp"
                android:visibility="visible"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/desig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation"
                android:layout_marginLeft="0dp"
                android:visibility="visible"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="14sp"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_container"
        android:background="#ffffff"
        android:layout_marginTop="15dp" />


</RelativeLayout>
