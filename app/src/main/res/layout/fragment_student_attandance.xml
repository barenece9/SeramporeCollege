<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAccentTransparent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            android:id="@+id/cv"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/cardview_leave_request_rl_mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/day_title"
                            android:layout_weight="1.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_vertical"/>

                        <Spinner
                            android:id="@+id/subject_spinner"
                            android:layout_weight=".6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>

                    </LinearLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:background="@color/divider"
                        android:visibility="gone">
                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.1"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/time_title"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Month"
                            android:textSize="16dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_vertical"/>

                        <Spinner
                            android:id="@+id/time_spinner"
                            android:layout_weight=".8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Spinner>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>





    <ListView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@null"
        android:visibility="gone"
        android:id="@+id/list_subject_paper">
    </ListView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:id="@+id/cv_present_count"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="12dp"
                    android:text="Subject"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1.2" />

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="12dp"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:text="Bengali"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="12dp"
                    android:text="Paper Code "
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1.2" />

                <TextView
                    android:id="@+id/tv_paper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="12dp"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:text="344"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="12dp"
                    android:text="Total Class"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1.2" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="12dp"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:text="35"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="12dp"
                    android:text="Total Present"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1.2" />

                <TextView
                    android:id="@+id/tv_present"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="12dp"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:text="13"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:textSize="12dp"
                    android:text="Percentage"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="1.2" />

                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="12dp"
                    android:textColor="@color/colorblack"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".8"
                    android:text="45%"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/list_attandance">
    </ListView>

    </LinearLayout>

</FrameLayout>